@model IEnumerable<Project.Models.Aboutus>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container">
        <div class="page-title">
            <h3 style="color:blue;font-weight:bold;text-align:center">AboutUs</h3>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Add" class="btn btn-sm btn-danger">Create AboutUs</a>
                    </div>
                    <div class="card-body">
                        <p class="card-title"></p>
                        <table class="table table-hover"
                               id="dataTables-example"
                               width="100%">
                            <thead>
                                <tr>
                                    <th>
                                        Id
                                    </th>

                                    <th>
                                        AirlineName
                                    </th>
                                    <th>Image </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        EstablishedDate
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.Id</td>

                                        <td>@item.AirlineName</td>
                                        <td><img src="~/images/@item.Image" width="50" /></td>
                                        <td>@item.Description</td>
                                        <td>@item.EstablishedDate </td>

                                        <td>
                                           

                                            <form asp-action="ConfirmDelete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this About Us?');">
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>