@model Project.Models.Aircraft

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Aircraft</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">Create New Aircraft</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create" asp-controller="Aircraft" asp-area="Admin" novalidate>
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Model Input -->
                    <div class="mb-3">
                        <label asp-for="Model" class="form-label">Aircraft Model</label><span class="text-danger">*</span>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                    <!-- Cabin Count Input -->
                    <div class="mb-3">
                        <label asp-for="CabinCount" class="form-label">Cabin Count</label><span class="text-danger">*</span>
                        <input asp-for="CabinCount" class="form-control" />
                        <span asp-validation-for="CabinCount" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Create Aircraft</button>
                    </div>
                </form>

                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
