
@model IEnumerable<Project.Models.FlightStatus>
@{
    ViewData["Title"] = "Flight Status List";
}


<div class="content">
    <div class="container">
        <div class="page-title">
            <h3 style="color:blue;font-weight:bold;text-align:center">List Flight Status Airport</h3>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Add" class="btn btn-sm btn-danger">Add Flight Status</a>
                    </div>
                    <div class="card-body">
                        <p class="card-title"></p>
                        <table class="table table-hover"
                               id="dataTables-example"
                               width="100%">
                            <thead>
                                <tr>
                                    
                                    <th>Flight Status Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                      
                                        <td>@item.FlightStatusName</td>
                                        <td>
                                       
                                            <a asp-action="Delete" asp-route-id="@item.FlightStatusId"><i class="fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

