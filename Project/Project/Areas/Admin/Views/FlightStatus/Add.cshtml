@model Project.Models.FlightStatus
@{
    ViewData["Title"] = "Flight Status Add";
}


<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>Add Flight Status</h3>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">All form elements</div>
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <form asp-action="PostAdd" asp-controller="FlightStatus" asp-area="admin" method="post" novalidate>
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-bg-danger"></div>
                            <div class="mb-3 row">
                                <label class="col-sm-2">Flight Status Name<span class="text-danger">*</span></label>
                                <div class="col-sm-10">
                                    <input asp-for="FlightStatusName" class="form-control" />
                                    <span asp-validation-for="FlightStatusName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-sm-2">Description<span class="text-danger">*</span></label>
                                <div class="col-sm-10">
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="line"></div>
                            <br />



                            <div class="mb-3 row">
                                <div class="col-sm-4 offset-sm-2">

                                    <button type="submit" class="btn btn-primary mb-2">
                                        <i class="fas fa-save"></i> Save
                                    </button>
                                    <a asp-action="index" class="btn btn-secondary mb-2">
                                        <i class="fas fa-times"></i> Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


