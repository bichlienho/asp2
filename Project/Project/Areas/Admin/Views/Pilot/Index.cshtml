@model IEnumerable<Project.Models.Pilot>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <a asp-action="Add" class="btn btn-sm btn-danger">Create </a>
            </div>
            <div class="card-body">
                <p class="card-title"></p>
                <table class="table table-hover"
                       id="dataTables-example"
                       width="100%">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Demo
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td><img src="~/images/@item.Image" width="50" /></td>
                                    <td>
                                        @item.Demo
                                    </td>
                                    <td>
                                        <form asp-action="ConfirmDelete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this aircraft?');">
                                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
