@model Project.Models.Feedback

@{
    ViewData["Title"] = "Create Feedback";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h4>Add Feedback</h4>
            </div>
            <div class="card-body">
                <form asp-action="create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-bold">Title<span class="text-danger">*</span></label>
                        <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label fw-bold">Image Upload</label>
                        <input asp-for="ImageFile" type="file" class="form-control form-control-lg" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Question" class="form-label fw-bold">Question<span class="text-danger">*</span></label>
                        <textarea asp-for="Question" class="form-control form-control-lg" rows="3" placeholder="Enter your question"></textarea>
                        <span asp-validation-for="Question" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold">Description<span class="text-danger">*</span></label>
                        <textarea asp-for="Description" class="form-control form-control-lg" rows="3" placeholder="Enter description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Answer" class="form-label fw-bold">Answer<span class="text-danger">*</span></label>
                        <textarea asp-for="Answer" class="form-control form-control-lg" rows="3" placeholder="Enter answer"></textarea>
                        <span asp-validation-for="Answer" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DescriptionAnswer" class="form-label fw-bold">Answer Description<span class="text-danger">*</span></label>
                        <textarea asp-for="DescriptionAnswer" class="form-control form-control-lg" rows="3" placeholder="Enter detailed answer description"></textarea>
                        <span asp-validation-for="DescriptionAnswer" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg">Create</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
