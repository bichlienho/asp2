 @model Project.Models.Ticket
 @{
     ViewData["Title"] = "Ticket Add";
 }
 <div class="content">
     <div class="container">
         <div class="page-title">
             <h3>Add Ticket</h3>
         </div>
         <div class="row">
             <div class="col-lg-12">
                 <div class="card">
                     <div class="card-header">All form elements</div>
                     <div class="card-body">
                         <h5 class="card-title"></h5>
                         <form asp-action="PostAdd" asp-controller="Ticket" asp-area="Admin" method="post" novalidate>
                             @Html.AntiForgeryToken()
                             <div asp-validation-summary="ModelOnly" class="text-bg-danger"></div>
                             <div class="mb-3 row">
                                 <label class="col-sm-2">Ticket Name</label>
                                 <div class="col-sm-10">
                                     <input asp-for="ClassName" class="form-control" />
                                     <span asp-validation-for="ClassName" class="text-danger"></span>
                                 </div>
                             </div>
                             <div class="line"></div>
                             <br />

                             <div class="mb-3 row">
                                 <label class="col-sm-2">Multiplier</label>
                                 <div class="col-sm-10">
                                     <input asp-for="Multiplier" class="form-control" />
                                     <span asp-validation-for="Multiplier" class="text-danger"></span>
                                 </div>
                             </div>
                             <div class="line"></div>
                             <br />
                             <div class="mb-3 row">
                                 <label class="col-sm-2">IsActive</label>
                                 <div class="col-sm-10">
                                     <input type="checkbox" class="form-check-input" asp-for="IsActive" />@Html.DisplayNameFor(model => model.IsActive)
                                 </div>
                             </div>
                             <div class="line"></div>
                             <br />
                       
                             <div class="line"></div>
                             <br />
                             <div class="mb-3 row">
                                 <div class="col-sm-4 offset-sm-2">

                                     <button type="submit" class="btn btn-primary mb-2">
                                         <i class="fas fa-save"></i> Save
                                     </button>
                                     <a asp-action="index" class="btn btn-secondary mb-2">
                                         <i class="fas fa-times"></i> Cancel
                                     </a>
                                 </div>
                             </div>
                         </form>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 </div>


