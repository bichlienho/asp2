@model Project.Models.Aircraft_Ticket

@{
    ViewData["Title"] = "Create Aircraft Ticket";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Create Aircraft Ticket</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Aircraft Selection -->
                <div class="mb-3">
                    <label asp-for="AircraftId" class="form-label">Select Aircraft</label>><span class="text-danger">*</span>
                    <select asp-for="AircraftId" class="form-select" asp-items="ViewBag.Aircrafts">
                        <option value="">-- Select Aircraft --</option>
                    </select>
                    <span asp-validation-for="AircraftId" class="text-danger"></span>
                </div>

                <!-- Ticket Type Selection -->
                <div class="mb-3">
                    <label asp-for="TicketId" class="form-label">Select Ticket Class</label>><span class="text-danger">*</span>
                    <select asp-for="TicketId" class="form-select" asp-items="ViewBag.Tickets">
                        <option value="">-- Select Ticket Class --</option>
                    </select>
                    <span asp-validation-for="TicketId" class="text-danger"></span>
                </div>

                <!-- Quantity Input -->
                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label">Quantity</label>><span class="text-danger">*</span>
                    <input asp-for="Quantity" class="form-control" placeholder="Enter ticket quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Create</button>
                </div>
            </form>

            <div class="mt-4 text-center">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
