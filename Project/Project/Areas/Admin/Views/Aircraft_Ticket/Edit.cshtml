@model Project.Models.Aircraft_Ticket

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit Aircraft Ticket</h1>

<hr />

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Hidden field for Id -->
                <input type="hidden" asp-for="Id" />

                <!-- Quantity Input -->
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>><span class="text-danger">*</span>
                    <input asp-for="Quantity" class="form-control" placeholder="Enter Quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <input type="submit" value="Save Changes" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
