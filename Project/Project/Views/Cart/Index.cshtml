@model IEnumerable<Project.Models.Cart>

@{
    ViewData["Title"] = "Index";
 
    Layout = "~/Views/Frontend.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br/>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="text-center text-primary mt-4">Your Cart</h1>

    <div class="mt-4">
    </div>





<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
                    <th>
                        Aircraft
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Flight)
                    </th>
            <th>
                Class Name
            </th>
                    <th>
                        Price
                    </th>
                  
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{decimal? total = 0;}
@foreach (var item in Model) {
                 
                        total += item.Price;
                    
                    <tr>
                        <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityNumber)
            </td>
                        <td>
                            @if (item.Gender == true)
                            {
                                @:Male
                            }
                            else if (item.Gender == false)
                            {
                                @:Female
                            }
                            else
                            {
                                @:Unknown
                            }
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Flight.Aircraft.Model)
                        </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flight.FlightNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.ClassName)
            </td>
                        <td>
                           $ @Html.DisplayFor(modelItem => item.Price)
                        </td>
            <td>
                        <form asp-action="ConfirmDelete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this aircraft?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>


            </td>
        </tr>
}

<tr>
    <th colspan="8" align="right">Sum</th>
                    <th align="right">@total$
                     

                    </th>
</tr>
            <tr>
                <th colspan="6" align="right">Discount</th>
                <td colspan="2">
                    <form asp-action="AddDiscount"  method="get">
                        <input type="text" name="code" placeholder="Enter disount code" />
                        @if (ViewBag.error != null)
                        {
                            <h5 style="color:red">@ViewBag.error</h5>
                        }
                        <input type="submit" value="Apply"/>
                    </form>
                  
                </td>
                <th align="right">
                    @{
                        decimal discount = 0;
                    }
                    @if (ViewBag.DiscountPercent != null)
                    {
                        discount = ViewBag.DiscountPercent / 100;
                       
                    }
                    @(discount * total)
                    $
                </th>
            </tr>
            <tr>
                <th colspan="8" align="right">Total</th>
                <th align="right">
                    @((1 - discount) * total)$
                </th>
            </tr>

    </tbody>
     
</table>

    <div class="mt-4">
        <a href="/Payment/Checkout?total=@((1 - discount) * total)" class="btn btn-success">
            <i class="fab fa-paypal"></i> PayPal
        </a>
    </div>

</div>
</div>
