@model Project.Models.Account

@{
    ViewData["Title"] = "Register";
}

<h2 style="text-align: center; color: #444; font-weight: 600; margin-bottom: 30px;">@ViewData["Title"]</h2>
<!-- Image Background -->
<img src="~/images/bglogin.webp" alt="Description of the image" style="position: absolute; top: 0; left: 0; width: 100%; height: 110%; object-fit: cover; border-radius: 8px;" />
<form method="post" style="width: 100%; max-width: 400px; padding: 30px; background-color: white; border-radius: 16px; box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15); position: relative; overflow: hidden; margin: 0 auto;">
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 10px; background-color: #87CEEB;"></div>

    <!-- Username Input -->
    <div style="margin-bottom: 20px; position: relative;">
        <label for="Username" style="font-size: 14px; font-weight: 500; color: #555;">Username</label>
        <input type="text" asp-for="Username" id="Username" class="form-control"
               style="width: 90%; padding: 12px 16px; margin-top: 8px; border-radius: 8px; border: 1px solid #ddd; font-size: 14px; transition: all 0.3s; color: #555;"
               onfocus="this.style.borderColor='#87CEEB';" onblur="this.style.borderColor='#ddd';"  />
        <span asp-validation-for="Username" class="text-danger" style="color: red;"></span>
    </div>

    <!-- Password Input -->
    <div style="margin-bottom: 20px; position: relative;">
        <label for="Password" style="font-size: 14px; font-weight: 500; color: #555;">Password</label>
        <input type="password" asp-for="Password" id="Password" class="form-control"
               style="width: 90%; padding: 12px 16px; margin-top: 8px; border-radius: 8px; border: 1px solid #ddd; font-size: 14px; transition: all 0.3s; color: #555;"
               onfocus="this.style.borderColor='#87CEEB';" onblur="this.style.borderColor='#ddd';"  />
        <span asp-validation-for="Password" class="text-danger" style="color: red;"></span>
    </div>

    <!-- Confirm Password Input -->
    <div style="margin-bottom: 20px; position: relative;">
        <label for="ConfirmPassword" style="font-size: 14px; font-weight: 500; color: #555;">Confirm Password</label>
        <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control"
               style="width: 90%; padding: 12px 16px; margin-top: 8px; border-radius: 8px; border: 1px solid #ddd; font-size: 14px; transition: all 0.3s; color: #555;"
               onfocus="this.style.borderColor='#87CEEB';" onblur="this.style.borderColor='#ddd';"  />
        
    </div>

    <!-- Fullname Input -->
    <div style="margin-bottom: 20px; position: relative;">
        <label for="Fullname" style="font-size: 14px; font-weight: 500; color: #555;">Full Name</label>
        <input type="text" asp-for="Fullname" id="Fullname" class="form-control"
               style="width: 90%; padding: 12px 16px; margin-top: 8px; border-radius: 8px; border: 1px solid #ddd; font-size: 14px; transition: all 0.3s; color: #555;"
               onfocus="this.style.borderColor='#87CEEB';" onblur="this.style.borderColor='#ddd';"  />
        <span asp-validation-for="Fullname" class="text-danger" style="color: red;"></span>
    </div>

    <!-- Email Input -->
    <div style="margin-bottom: 20px; position: relative;">
        <label for="Email" style="font-size: 14px; font-weight: 500; color: #555;">Email</label>
        <input asp-for="Email" type="text" class="form-control"
               style="width: 90%; padding: 12px 16px; margin-top: 8px; border-radius: 8px; border: 1px solid #ddd; font-size: 14px; transition: all 0.3s; color: #555;"
               onfocus="this.style.borderColor='#87CEEB';" onblur="this.style.borderColor='#ddd';"  />
        <span asp-validation-for="Email" class="text-danger" style="color: red;"></span>
    </div>

    <!-- Phone Number Input -->
    <div style="margin-bottom: 20px; position: relative;">
        <label for="PhoneNumber" style="font-size: 14px; font-weight: 500; color: #555;">Phone Number</label>
        <input type="text" asp-for="PhoneNumber" id="PhoneNumber" class="form-control"
               style="width: 90%; padding: 12px 16px; margin-top: 8px; border-radius: 8px; border: 1px solid #ddd; font-size: 14px; transition: all 0.3s; color: #555;"
               onfocus="this.style.borderColor='#87CEEB';" onblur="this.style.borderColor='#ddd';"  />
        <span asp-validation-for="PhoneNumber" class="text-danger" style="color: red;"></span>
    </div>

            <button type="submit" class="btn btn-primary"
                    style="width: 100%; padding: 12px; font-size: 16px; border: none; border-radius: 8px; background-color: #87CEEB; color: white; font-weight: bold; cursor: pointer; transition: transform 0.3s, box-shadow 0.3s, background-color 0.3s;"
                    onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 4px 15px rgba(0, 0, 0, 0.2)'; this.style.backgroundColor='#4682B4';"
                    onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='none'; this.style.backgroundColor='#87CEEB';">
                Register
            </button>

       


</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert" style="text-align: center;">
        <strong>Error: </strong> @ViewBag.Error
    </div>
}
