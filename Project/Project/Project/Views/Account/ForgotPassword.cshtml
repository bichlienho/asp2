@{
    ViewData["Title"] = "Forgot Password";
}
<style>
    .alert-success {
        background-color: #d4edda; /* Xanh nhạt */
        color: #155724; /* Xanh đậm */
        border: 1px solid #c3e6cb; /* Viền xanh nhạt */
        padding: 10px 15px; /* Khoảng cách nội dung */
        margin: 10px 0; /* Khoảng cách giữa các thông báo */
        border-radius: 5px; /* Góc bo tròn */
    }

    .alert-danger {
        background-color: #f8d7da; /* Đỏ nhạt */
        color: #721c24; /* Đỏ đậm */
        border: 1px solid #f5c6cb; /* Viền đỏ nhạt */
        padding: 10px 15px; /* Khoảng cách nội dung */
        margin: 10px 0; /* Khoảng cách giữa các thông báo */
        border-radius: 5px; /* Góc bo tròn */
    }
</style>
@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
<!-- Right Section -->
<div style="flex: 1; display: flex; justify-content: center; align-items: center; padding: 40px;">
    <img src="~/images/bglogin.webp" alt="Description of the image" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; border-radius: 8px;" />
    <form asp-action="ForgotPassword" method="post" style="width: 100%; max-width: 400px; padding: 30px; background-color: white; border-radius: 16px; box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15); position: relative; overflow: hidden;">
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 10px; background-color: #87CEEB;"></div>
        <h2 style="text-align: center; color: #444; font-weight: 600; margin-bottom: 30px;">Forgot Password ?</h2>

        <!-- Email Input -->
        <div style="margin-bottom: 20px; position: relative;">
            <label for="email" style="font-size: 14px; font-weight: 300; color: #555;">Email</label>
            <input type="email" name="email" id="email" class="form-control"
                   style="width: 90%; padding: 12px 16px; margin-top: 8px; border-radius: 8px; border: 1px solid #ddd; font-size: 14px; transition: all 0.3s; color: #555;"
                   onfocus="this.style.borderColor='#87CEEB';" onblur="this.style.borderColor='#ddd';" required />

        </div>

        <div style="text-align: center;">
            <button type="submit" class="btn btn-primary"
                    style="width: 50%; padding: 12px; font-size: 16px; border: none; border-radius: 8px; background-color: #87CEEB; color: white; font-weight: bold; cursor: pointer; transition: transform 0.3s, box-shadow 0.3s, background-color 0.3s;"
                    onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 4px 15px rgba(0, 0, 0, 0.2)'; this.style.backgroundColor='#4682B4';"
                    onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='none'; this.style.backgroundColor='#87CEEB';">
                Send Request
            </button>
        </div>

        <div style="text-align: center; margin-top: 20px;">
            <a href="@Url.Action("Login", "Account")" class="btn btn-secondary"
               style="display: inline-block; padding: 12px 20px; font-size: 16px; border: 2px solid #87CEEB; border-radius: 8px; background-color: transparent; color: #87CEEB; font-weight: bold; cursor: pointer; transition: all 0.3s;"
               onmouseover="this.style.backgroundColor='#87CEEB'; this.style.color='white';"
               onmouseout="this.style.backgroundColor='transparent'; this.style.color='#87CEEB';">
                Back to Login
            </a>
        </div>
    </form>
</div>
