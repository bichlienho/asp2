@{
    ViewData["Title"] = "Denied";
    Layout = "~/Views/Frontend.cshtml";
}

<style>
    /* Container styling */
    .denied-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        height: 80vh;
        text-align: center;
        background-color: #f8f9fa;
        color: #333;
    }

        /* Heading styling */
        .denied-container h1 {
            font-size: 48px;
            font-weight: bold;
            color: #d9534f; /* Red color for "Denied" */
            margin-bottom: 20px;
        }

        /* Paragraph styling */
        .denied-container p {
            font-size: 18px;
            color: #555;
            margin-bottom: 30px;
        }

        /* Button styling */
        .denied-container a {
            display: inline-block;
            padding: 12px 25px;
            background-color: #007bff; /* Bootstrap primary color */
            color: #fff;
            text-decoration: none;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .denied-container a:hover {
                background-color: #0056b3;
            }

    /* Icon styling */
    .denied-icon {
        font-size: 80px;
        color: #f0ad4e; /* Warning color */
        margin-bottom: 20px;
    }
</style>

<div class="denied-container">
    <div class="denied-icon">
        <i class="fa fa-exclamation-triangle"></i>
    </div>
    <h1>Access Denied</h1>
    <p>
        Sorry, you don't have permission to access this page. <br>
        Please contact the administrator if you believe this is an error.
    </p>
    <a href="/">Return to Home</a>
</div>
