
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Frontend.cshtml";
}

<!-- start banner Area -->
<section class="banner-area relative">
	<div style="position: absolute;top: 10;left: 10;width: 90%;height: 80%;background-image: url('~/frontend/img/anhn.jpg');background-position: center;z-index: 1;opacity: 0.7; " class="overlay "></div>
	<div class="container">
		<div class="row fullscreen align-items-center justify-content-between">
			<div class="col-lg-6 col-md-6 banner-left">
				<h6 class="text-black"><img style="width: 270px;" src="~/frontend/img/c1.png" alt="" title="" /></h6>
				<h1 class="text-white">Vietnam Domestic Flightsl</h1>
				<p class="text-white">
					Bringing Passengers a good and happy flight with a great experience of ARS Airlines
				</p>
				<a href="/flight" class="primary-btn text-uppercase">Let's Go</a>
			</div>

		</div>
	</div>
</section>
<!-- End banner Area -->
<!-- Start Hero Section -->
<div class="hero">
	<div class="container ">
		<div class="row justify-content-between">
			<div class="col-lg-12">
				<div class="intro-excerpt">
					<h1 style="color:blue;font-weight:bold;text-align:center;">Checkout</h1>
				</div>
			</div>

		</div>
	</div>
</div>
<!-- End Hero Section -->

<div class="untree_co-section">
	<div class="container">
		<div class="row mb-5">
			<div class="col-md-12">
				<div class="border p-4 " role="alert">
					<h2 style="font-size: 16px;color:red; font-weight:bold; text-align:center;">Hope your booking has been confirmed</h2>
					<p style="font-size: 16px;color:yellowgreen;font-weight:700;text-align:center;">Specific information has been send to your email</p>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 mb-5 mb-md-0">
				<h2 class="h3 mb-3 text-black">Booking Details</h2>
				<div class="p-3 p-lg-5 border bg-white">
					<div class="form-group row">
						<div class="col-md-12">
							<label for="c_fname" class="text-black">Booking ID: <span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="c_fname" name="c_fname">
						</div>
					</div>
					<div class="form-group row">
						<div class="col-md-6">
							<label for="c_lname" class="text-black">Passengers: <span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="c_lname" name="c_lname">
						</div>
						<div class="col-md-6">
							<label for="c_lname" class="text-black">Day of Birth: <span class="text-danger">*</span></label>
							<input type="date" class="form-control" id="c_lname" name="c_lname">
						</div>
					</div>
					<div class="form-group row">
						<div class="col-md-6">
							<label for="c_fname" class="text-black">Phone: <span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="c_fname" name="c_fname">
						</div>
						<div class="col-md-6">
							<label for="c_lname" class="text-black">Email: <span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="c_lname" name="c_lname">
						</div>
					</div>

					<div class="form-group row">
						<div class="col-md-6">
							<label for="c_fname" class="text-black">Address: <span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="c_fname" name="c_fname">
						</div>
						<div class="col-md-6">
							<label for="c_lname" class="text-black">Number of people traveling: <span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="c_lname" name="c_lname">
						</div>
					</div>

					<div class="form-group row">
						<div class="col-md-6">
							<label for="c_address" class="text-black">Gender: <span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="c_address" name="c_address" placeholder="Street address">
						</div>
						<div class="col-md-6">
							<label for="c_lname" class="text-black">Country: <span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="c_lname" name="c_lname">
						</div>
					</div>
					<div class="form-group row">
						<div class="col-md-6">
							<label for="c_state_country" class="text-black">Message/Note: <span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="c_state_country" name="c_state_country">
						</div>
						<div class="col-md-6">
							<label for="c_postal_zip" class="text-black">Create date: <span class="text-danger">*</span></label>
							<input type="date" class="form-control" id="c_postal_zip" name="c_postal_zip">
						</div>
					</div>
					<div class="form-group">
						<label for="c_ship_different_address" class="text-black" data-bs-toggle="collapse" href="#ship_different_address" role="button" aria-expanded="false" aria-controls="ship_different_address">
							<input type="checkbox" value="1" id="c_ship_different_address"> Cash
						</label>
						<label for="c_ship_different_address" class="text-black" data-bs-toggle="collapse" href="#ship_different_address" role="button" aria-expanded="false" aria-controls="ship_different_address">
							<input type="checkbox" value="1" id="c_ship_different_address"> Paypal
						</label>

					</div>

					<div class="form-group">
						<label for="c_order_notes" class="text-black">Order Notes</label>
						<textarea name="c_order_notes" id="c_order_notes" cols="30" rows="5" class="form-control" placeholder="Write your notes here..."></textarea>
					</div>

				</div>
			</div>
		

		<!-- </form> -->
	</div>
</div>
	