@model IEnumerable<Project.Models.Aboutus>

@{
    ViewData["Title"] = "about";
    Layout = "~/Views/Frontend.cshtml";
}

<!-- start banner Area -->
<section class="banner-area relative">
    <div style="position: absolute;top:10;left:10;width: 90%;height: 80%;background-image: url('~/frontend/img/Banner1.png');background-position: center;z-index: 1;opacity: 0.7; " class="overlay "></div>
    <div class="container">
        <div class="row fullscreen align-items-center justify-content-between">
            <div class="col-lg-6 col-md-6 banner-left">
                <h6 class="text-black"><img style="width: 270px;" src="~/frontend/img/c1.png" alt="" title="" /></h6>
                <h1 class="text-white">Vietnam Domestic Flights</h1>
                <p class="text-white">
                    Bringing Passengers a good and happy flight with a great experience of ARS Airlines
                </p>
                <a href="/flight" class="primary-btn text-uppercase">Let's Go</a>
            </div>

           
        </div>
    </div>
</section>

<body>
    <section class="about-us-section">
        <div class="container-xxl pt-5 pb-5">
            <div class="text-center mb-5">
                <h1 class="section-title">About Us</h1>
                <p class="section-subtitle">
                    Welcome to ARS Airlines – your trusted companion in air travel, connecting cities across the nation with unparalleled service and comfort.
                </p>
            </div>

            <div class="container-fluid container-lg">
                <div class="row h-100 g-2 justify-content-center">
                    @foreach (var about in Model)
                    {
                        <div class="col-sm-9 col-md-4 mb-3 mb-md-0 h-100">
                            <div class="card card-span text-white h-100 text-center">
                                <img class="img-card h-100" src="~/images/@about.Image" alt="@about.AirlineName">
                                <div class="card-body px-xl-5 px-md-3 pt-0 pb-4">
                                    <div class="d-flex justify-content-center align-items-center bg-100 mt-n5 p-3 rounded shadow">
                                        <h2 class="text-uppercase font-weight-bold text-primary">@about.AirlineName</h2>
                                    </div>
                                    <p class="mt-4 text-justify text-muted">
                                        @about.Description
                                    </p>
                                    <p class="mt-3 text-secondary font-weight-bold">
                                        Established: @about.EstablishedDate.ToString("MMMM dd, yyyy")
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    </body>
    <style>
        .about-us-section {
            padding: 50px 0;
            background-color: #f9f9f9;
        }

        .section-title {
            font-size: 2.5rem;
            color: #444;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .section-subtitle {
            font-size: 1.1rem;
            color: #666;
            margin-bottom: 30px;
        }

        .card {
            border: none;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

        .img-card {
            object-fit: cover;
            border-radius: 5px 5px 0 0;
        }

        .text-primary {
            color: #007bff !important;
        }

        .text-muted {
            font-size: 1rem;
            color: #666;
        }

        .text-secondary {
            font-size: 0.9rem;
            color: #888;
        }
    </style>
