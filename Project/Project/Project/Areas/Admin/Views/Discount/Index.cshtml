@model IEnumerable<Project.Models.Discount>
@{
    ViewData["Title"] = "Discount List";
}
<div class="content">
    <div class="container">
        <div class="page-title">
            <h3 style="color:blue;font-weight:bold;text-align:center">List Discount</h3>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Add" class="btn btn-sm btn-danger">Add Discount</a>
                    </div>
                    <div class="card-body">
                        <p class="card-title"></p>
                        <table class="table table-hover"
                               id="dataTables-example"
                               width="100%">
                            <thead>
                                <tr>

                                    <th>Discount Code</th>
                                    <th>DiscountPercent</th>
                                    <th>QuantityDiscount </th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th>StartDate </th>
                                    <th>EndDate</th>
                                    <th>IsActive</th>
                                
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DiscountCode</td>
                                        <td>@item.DiscountPercent</td>
                                        <td>@item.QuantityDiscount</td>
                                        <td>@item.Description</td>
                                        <td><img src="~/images/@item.Image" width="50" /></td>
                                        <td>@item.StartDate</td>
                                        <td>@item.EndDate</td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <i class="fa-solid fa-square-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa-solid fa-square-xmark"></i>
                                            }
                                        </td>
                      
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.DiscountID"><i class="fa-solid fa-pen-to-square"></i></a>
                                            <form asp-action="ConfirmDelete" asp-route-id="@item.DiscountID" method="post" onsubmit="return confirm('Are you sure you want to delete this Discount?');">
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

