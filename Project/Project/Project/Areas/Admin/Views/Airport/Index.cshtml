@model IEnumerable<Project.Models.Airport>
@{
    ViewData["Title"] = "Airport List";
}

<div class="content">
    <div class="container">
        <div class="page-title">
            <h3 style="color:blue;font-weight:bold;text-align:center">List Airport</h3>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Add" class="btn btn-sm btn-danger">Add Airport</a>
                    </div>
                    <div class="card-body">
                        <p class="card-title"></p>
                        <table class="table table-hover"
                               id="dataTables-example"
                               width="100%">
                            <thead>
                                <tr>

                                    <th>Departure airport</th>
                                    <th>Landing airport </th>
                                    <th>IsActive</th>
                                    <th>Date Departure </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.AirportName</td>
                                        <td>@item.City</td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <i class="fa-solid fa-square-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa-solid fa-square-xmark"></i>
                                            }
                                        </td>
                                        <td>@item.CreateDate</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.AirportID"><i class="fa-solid fa-pen-to-square"></i>Edit</a>
                                            <form asp-action="ConfirmDelete" asp-route-id="@item.AirportID" method="post" onsubmit="return confirm('Are you sure you want to delete this Airport?');">
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

