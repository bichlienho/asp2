@model Project.Models.Airport

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Edit Airport</h1>

<div class="card">
    <div class="card-header">
        <h4>Airport Details</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="AirportID" />

            <!-- Airport Name Field -->
            <div class="form-group">
                <label asp-for="AirportName" class="control-label">Departure airport <span class="text-danger">*</span></label>
                <input asp-for="AirportName" class="form-control" placeholder="Enter Airport Name" />
                <span asp-validation-for="AirportName" class="text-danger"></span>
            </div>

            <!-- City Field -->
            <div class="form-group">
                <label asp-for="City" class="control-label">Landing airport <span class="text-danger">*</span></label>
                <input asp-for="City" class="form-control" placeholder="Enter City" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <!-- Is Active Checkbox -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <input type="submit" value="Save Changes" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>
