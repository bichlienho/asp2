@model IEnumerable<Project.Models.Flight>
@{
    ViewData["Title"] = "Flight List";
}

<div class="content">
    <div class="container">
        <div class="page-title">
            <h3 style="color:blue;font-weight:bold;text-align:center">List Flight Airport In Viet Nam</h3>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Add" class="btn btn-sm btn-danger">Add Flight Airport</a>
                    </div>
                    <div class="card-body">
                        <p class="card-title"></p>
                        <table class="table table-hover"
                               id="dataTables-example"
                               width="100%">
                            <thead>
                                <tr>
                                    <th>Flight Number</th>
                                    <th>Origin Airport</th>
                                    <th>Destination Airport</th>
                                    <th>Aircraft</th>
                                    <th>Flight Status Airport</th>
                                    <th>Departure Time</th>
                                    <th>Arrival Time</th>
                                    <th>IsActive</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FlightNumber</td>
                                        <td>@item.Airport.AirportName</td>
                                        <td>@item.Airport.City</td>
                                        <td>@item.Aircraft.Model</td>   

                                        <td>@item.FlightStatus.FlightStatusName</td>
                                        <td>@item.DepartureTime</td>
                                        <td>@item.ArrivalTime</td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <i class="fa-solid fa-square-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa-solid fa-square-xmark"></i>
                                            }
                                        </td>
                                        <td class="d-flex justify-content-around align-items-center">
                                            <!-- Details Button -->
                                            <a asp-action="Details" asp-route-id="@item.FlightID" class="btn btn-sm btn-info text-white me-2" title="View Details">
                                                <i class="fa-solid fa-circle-info"></i> Details
                                            </a>

                                            <!-- Edit Button -->
                                            <a asp-action="Edit" asp-route-id="@item.FlightID" class="btn btn-sm btn-warning text-white" title="Edit">
                                                <i class="fa-solid fa-pen-to-square"></i> Edit
                                            </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

