@model IEnumerable<Project.Models.Feedback>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container">
        <div class="page-title">
            <h3 style="color:blue;font-weight:bold;text-align:center">Q&A</h3>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Create" class="btn btn-sm btn-danger">Create Q&A</a>
                    </div>
                    <div class="card-body">
                        <p class="card-title"></p>
                        <table class="table table-hover"
                               id="dataTables-example"
                               width="100%">
                            <thead>
                                <tr>
                                    <th>Id </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Image
                                    </th>

                                    <th>
                                        Question
                                    </th>
                                    <th> Description </th>
                                    <th>
                                        Answer
                                    </th>
                                    <th> Description Answer</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>

                                        <td>@item.Title</td>
                                        <td><img src="~/images/@item.Image" width="50" /></td>
                                        <td>
                                            @item.Question
                                        </td>
                                        <td>
                                            @item.Description
                                        </td>
                                        <td>
                                            @item.Answer
                                        </td>
                                        <td>
                                            @item.Description Answer
                                        </td>
                                        <td>
                                            <form asp-action="ConfirmDelete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this Feedback?');">
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
