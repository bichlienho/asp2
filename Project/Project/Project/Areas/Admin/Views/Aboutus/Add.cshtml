@model Project.Models.Aboutus

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h4>Add Airline Information</h4>
            </div>
            <div class="card-body">
                <form asp-action="Postadd" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label fw-bold">Upload Image</label>
                        <input asp-for="ImageFile" class="form-control form-control-lg" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AirlineName" class="form-label fw-bold">Airline Name<span class="text-danger">*</span></label>
                        <input asp-for="AirlineName" class="form-control form-control-lg" placeholder="Enter airline name" />
                        <span asp-validation-for="AirlineName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold">Description<span class="text-danger">*</span></label>
                        <textarea asp-for="Description" class="form-control form-control-lg" rows="3" placeholder="Enter a description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EstablishedDate" class="form-label fw-bold">Established Date<span class="text-danger">*</span></label>
                        <input asp-for="EstablishedDate" type="date" class="form-control form-control-lg" />
                        <span asp-validation-for="EstablishedDate" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg">Create</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
