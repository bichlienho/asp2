@model IEnumerable<Project.Models.Ticket>
@{
    ViewData["Title"] = "Ticket List";
}

<style>
    .content {
        padding: 30px;
        background-color: #f9f9f9;
    }

    .container {
        display: flex;
        flex-direction: column;
        width: 80%;
        max-width: 1200px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        padding: 20px;
    }

    .page-title h3 {
        text-align: center;
        color: #007bff;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .card {
        border: none;
        border-radius: 8px;
        background: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        font-weight: bold;
    }

    .card-body {
        padding: 20px;
    }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
        border-radius: 5px;
        padding: 5px 15px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        text-align: left;
    }

    th, td {
        padding: 12px;
        border: 1px solid #ddd;
        font-size: 14px;
    }

    th {
        background-color: #f1f1f1;
        color: #333;
    }

    td {
        background-color: #fafafa;
    }

        td i {
            font-size: 18px;
            cursor: pointer;
        }

            td i:hover {
                color: #007bff;
            }

    .table-actions {
        display: flex;
        gap: 10px;
        justify-content: center;
        align-items: center;
    }

        .table-actions a {
            color: #007bff;
            font-size: 20px;
            text-decoration: none;
        }

            .table-actions a:hover {
                color: #f39c12;
            }
</style>

<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>List Tickets</h3>
        </div>
        <div class="card">
            <div class="card-header">
                <a asp-action="Add" class="btn btn-danger">Add Ticket</a>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>TicketID</th>
                            <th>Ticket Name</th>
                            <th>Multiplier</th>
                            <th>Status</th>
                            <th>Create Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TicketClassID</td>
                                <td>@item.ClassName</td>
                                <td>@item.Multiplier</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <i class="fa-solid fa-square-check" style="color:green"></i>
                                    }
                                    else
                                    {
                                        <i class="fa-solid fa-square-xmark" style="color:red"></i>
                                    }
                                </td>
                                <td>@item.CreateDate.ToString("yyyy-MM-dd")</td>
                                <td class="table-actions">
                                    <a asp-action="Edit" asp-route-id="@item.TicketClassID" title="Edit">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <form asp-action="ConfirmDelete" asp-route-id="@item.TicketClassID" method="post" onsubmit="return confirm('Are you sure you want to delete this Ticket?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
